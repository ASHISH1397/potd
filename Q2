class Solution {
public:
    int missingNumber(vector<int>& nums) {
        int n=nums.size();
        int sumArray=0;
        int sumAll=(n)*(n+1)/2;        //sum of all no.
        for(int i=0;i<nums.size();i++){
            sumArray+=nums[i];         //sum of all element of array
        }
        return sumall-sumArray; // for findng no=sumall=sumArray
    }
};
